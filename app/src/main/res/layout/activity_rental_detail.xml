<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.rental.detail.RentalDetailActivity">

    <data>

        <variable
                name="viewModel"
                type="com.rent.ui.rental.detail.RentalDetailViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/det_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:paddingTopSystemWindowInsets="@{true}">

        <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/addLocContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/AddlayoutDetails"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.15"
                app:layout_constraintVertical_chainStyle="packed">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/global_detail_locataire"
                        android:textColor="#C1F75959"
                        android:textStyle="italic" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_toStartOf="@id/tvText"
                        android:background="#FF0000" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:layout_toEndOf="@id/tvText"
                        android:background="#FF0000" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/det_cin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="@string/global_identity_cart"
                    android:inputType="number"
                    android:text="@={viewModel.cin}"
                    android:textAlignment="center" />

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/det_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="@string/global_name_surname"
                    android:text="@={viewModel.name}"
                    android:textAlignment="center" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/add_tel_det"
                    onClickWithDebounce="@{() -> viewModel.showPhoneDialog()}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:drawableEnd="@drawable/phonelist"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:text="@string/global_phones"
                    android:textAlignment="center"
                    android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/updateLoca"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    onClickWithDebounce="@{() -> viewModel.checkLocataire()}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:padding="8dp"
                    android:text="Modifier Locataire"
                    android:theme="@style/FlatButton" />

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Detail Location"
                        android:textColor="#C1F75959"
                        android:textStyle="italic" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_toStartOf="@id/tvText2"
                        android:background="#FF0000" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:layout_toEndOf="@id/tvText2"
                        android:background="#FF0000" />

            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/AddlayoutDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addLocContainer">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editRentalHouse"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_global_30dp"
                        android:layout_marginEnd="@dimen/margin_global_30dp"
                        android:drawableEnd="@drawable/ic_dropdown"
                        android:focusable="false"
                        android:hint="@string/rental_text_house"
                        android:paddingStart="@dimen/padding_global_10dp"
                        android:paddingEnd="@dimen/padding_global_10dp"
                        android:text="@={viewModel.house}"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:onClickWithDebounce="@{() -> spinnerIRentalHouse.performClick()}" />

                <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinnerIRentalHouse"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_global_30dp"
                        android:layout_marginEnd="@dimen/margin_global_30dp"
                        android:entries="@array/house_list"
                        android:paddingStart="@dimen/padding_global_10dp"
                        android:paddingEnd="@dimen/padding_global_10dp"
                        android:spinnerMode="dialog"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:onItemSelectedListener="@{viewModel}"
                        app:selectedValue="@{viewModel.house}" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/colorFrame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:text="Changer le couleur"
                        android:textColor="#FC161515"
                        android:textSize="18sp"
                        android:textStyle="bold|italic" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/markDet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        app:backgroundColor="@{viewModel.rentalColor}" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageDateAdd"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/calendaricon" />

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/AddDateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginStart="5dp"

                        android:text="De: " />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/det_date_debu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"

                        android:layout_weight="1"
                        android:text="@{viewModel.startDate}"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="italic" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:text="A: " />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/det_date_fin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:text="@{viewModel.endDate}"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="italic" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/add_time_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"

                        android:layout_weight="1"
                        android:text="@={viewModel.time}"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="italic" />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageTimeDet"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:contentDescription="DATE"
                        app:srcCompat="@drawable/clockicon" />
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/updateLoc"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    onClickWithDebounce="@{() -> viewModel.onUpdateClicked()}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:padding="8dp"
                    android:text="Modifier location"
                    android:theme="@style/FlatButton" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton"
                onClickWithDebounce="@{() -> viewModel.showPaymentDialog()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="92dp"
                android:clickable="true"
                app:backgroundTint="@color/dollar"
                app:layout_constraintBottom_toBottomOf="@+id/coordinatorLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/dollar" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/coordinatorLayoutCal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/coordinatorLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:paddingBottomSystemWindowInsets="@{true}">

            <include layout="@layout/bottom_sheet_calendar" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/coordinatorLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                app:paddingBottomSystemWindowInsets="@{true}"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

            <include layout="@layout/bottom_sheet_payments" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>