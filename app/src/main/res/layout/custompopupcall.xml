<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/listcalls"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="20dp"
        app:layout_anchorGravity="center">

    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#1B1818"
            android:backgroundTint="#2E2828"
            android:gravity="center"
            android:padding="2dp"
            android:text="Taper le NÂ° pour appeler"
            android:textColor="#CCC5C5"
            android:textSize="24sp"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/callnumberCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/phonesettings"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="53594242"
            android:textSize="20sp" />


</LinearLayout>